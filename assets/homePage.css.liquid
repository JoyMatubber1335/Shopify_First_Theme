/* Banner Section */
.banner-section {
  position: relative;
  height: 100vh; /* Set the height to 100% of the viewport height */
  text-align: center;
}

.banner-section img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.shop-now-button {
  position: absolute;
  top: 80%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: inline-block;
  padding: 10px 20px;
  background-color: #d78465; /* Adjust the button styles */
  color: #000000;
  text-decoration: none;
  z-index: 1;
  transition: background-color 0.3s ease;
  border: 1px solid #ccc;
}

.shop-now-button1 {
  display: inline-block;
  padding: 10px 20px;
  margin-top: 4px;
  background-color: #5f2266;
  color: #dcc7c7;
  text-decoration: none;
  border: 1px solid #ccc;
  border-radius: 4px;
  transition: background-color 0.3s ease;
  float: right;
}

.shop-now-button1:hover {
  background-color: #999;
  color: #fff;
}

.shop-now-button:hover {
  background-color: #a70f0f;
}

/* Second Section */
.second-section {
  text-align: center;
  margin-top: 40px;
}

.second-section h2 {
  font-size: 24px;
}

.second-section p {
  font-size: 16px;
}

/* Third Section - Popular Products */

.third-section {
  text-align: center;
}

.product-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 20px;
}

.product-item {
  width: 300px;
  background-color: #f5f5f5;
  border-radius: 5px;
  padding: 20px;
  text-align: left;
}

.product-image img {
  width: 100%;
  height: auto;
  border-radius: 5px;
}

.product-title {
  margin-top: 10px;
  font-size: 20px;
}

.product-collection {
  margin-top: 5px;
  font-size: 14px;
  color: #888;
}

.product-description {
  margin-top: 10px;
  font-size: 14px;
  color: #555;
}

.shop-now-button {
  display: inline-block;
  padding: 10px 20px;
  background-color: #f00;
  color: #fff;
  text-decoration: none;
  margin-top: 15px;
}

.image-navigation {
  margin-top: 20px;
}

.arrow-button {
  display: inline-block;
  width: 30px;
  height: 30px;
  background-color: #f00;
  color: #fff;
  text-align: center;
  line-height: 30px;
  cursor: pointer;
  margin: 0 5px;
}

.arrow-button:hover {
  background-color: #ff0000;
}

/* Fourth Section - Shop Branches */
.fourth-section {
  text-align: center;
 
}

.grid-box {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-gap: 20px;
  margin-top: 20px;
}

.branch {
  background-color: #f2f2f2;
  padding: 20px;
  border: 1px solid #ccc;
  border-radius: 4px;
  text-align: center;
}

.branch h3 {
  color: #333;
  font-size: 20px;
  margin-bottom: 10px;
}

.branch p {
  color: #777;
  font-size: 16px;
  margin-bottom: 0;
}

/* Footer Section */
footer {
  margin-top: 40px;
}
