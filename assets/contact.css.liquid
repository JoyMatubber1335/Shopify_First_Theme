.container {
  display: flex;
  justify-content: center;
  align-items: flex-start;
}

.box {
  display: flex;
}

.grid {
  flex: 1;
}

.left-grid {
  background-color: #b9aeb9;
  padding: 20px;
}

.right-grid {
  background-color: #b9aeb9;
  padding: 20px;
}

h1 {
  font-size: 24px;
  color: #333;
  margin-bottom: 20px;
}

p {
  margin-bottom: 10px;
}

.phone-number {
  font-weight: bold;
}

.create-button {
  padding: 10px 20px;
  font-size: 16px;
  background-color: #164c3a;
  color: #fff;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

.form-container {
  margin-bottom: 20px;
}

.input-group {
  margin-bottom: 10px;
}

label {
  display: block;
  font-size: 16px;
  color: #333;
  margin-bottom: 5px;
}

input[type="text"],
input[type="email"],
textarea {
  width: 100%;
  padding: 10px;
  font-size: 14px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.submit {
  margin-top: 10px;
}

.support-text {
  margin-bottom: 10px;
  text-align: center;
  display: flex;
  justify-content: center;
}
