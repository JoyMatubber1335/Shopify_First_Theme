.product-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  grid-gap: 20px;
}

.product-box {
  border: 1px solid #7e7979;
  padding: 20px;
  position: relative;
}

.product-discount {
  position: absolute;
  top: 5px;
  left: 10px;
  background-color: rgb(223, 83, 1);
  color: white;
  padding: 5px;
  border-radius: 50%;
  font-size: 16px;
  z-index: 1; /* Ensure the discount circle appears above the image */
}

.product-item {
  position: relative;
}

.product-item a {
  text-decoration: none;
  color: #333;
}

.product-item h3 {
  margin-top: 10px;
}

.product-item img {
  width: 100%;
  height: auto;
  margin-bottom: 10px;
}

.product-item button {
  margin-top: 10px;
  padding: 10px 20px;
  background-color: #333;
  color: #fff;
  border: none;
  cursor: pointer;
}

.product-item button:hover {
  background-color: #571c5a;
}

.product-item .save-message {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #ff0000;
  color: #fff;
  padding: 10px;
  display: none;
}

.product-item:hover .save-message {
  display: block;
}
#sort-by {
  font-size: 16px;
  padding: 8px 12px;

  border: 1px solid #ccc;
  border-radius: 4px;
  background-color: #564a69;
  color: #fff4f4;
  float: right;
  text-align: right;
  margin-left: 10px;
}

#sort-by option {
  font-size: 14px;
  text-align: left;
}
.pagination-container {
  text-align: right;
  margin-bottom: 20px;
  margin-top: 20px;
  margin-right: 10px;
  font-size: 20px;
}
.previous-price {
  text-decoration: line-through;
  color: #7e7979;
}

.current-price {
  color: black;
}
