.product-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  grid-gap: 16px;
  margin-left: 20px;
}

.product-box {
  position: relative;
}

.product-discount {
  position: absolute;
  top: 2px;
  left: 2px;
  width: 50px;
  height: 50px;
  border-radius: 50%;
  background-color: #ff0000;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
}

