.product-page {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.product-image {
  width: 50%;
}

.product-image img {
  width: 100%;
  height: auto;
}

.product-details {
  width: 50%;
  padding-left: 20px;
}

.product-details h1 {
  font-size: 24px;
  margin-top: 0;
}

.product-details h2 {
  font-size: 20px;
}

.quantity {
  display: flex;
  align-items: center;
  border: 1px solid #ccc;
  width: 100px;
  height: 30px;
  margin-top: 10px;
}

.quantity-btn {
  padding: 5px 10px;
  font-size: 16px;
  border: none;
  background-color: transparent;
  cursor: pointer;
}

.quantity-input {
  width: 50px;
  padding: 5px;
  text-align: center;
  font-size: 16px;
  border: none;
  outline: none;
}

.quantity-input::-webkit-inner-spin-button,
.quantity-input::-webkit-outer-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

.buttons {
  margin-top: 20px;
}

.buy-now {
  background-color: black;
  color: white;
  padding: 10px 20px;
  border: none;
  cursor: pointer;
  margin-right: 10px;
}

.add-to-cart {
  margin-top: 10px;
  padding: 10px 20px;
  background-color: #333;
  color: #fff;
  border: none;
  cursor: pointer;
}

.description {
  margin-top: 20px;
}
