.product-page {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.product-image {
  width: 50%;
}

.product-details {
  width: 50%;
  padding-left: 10px;
}

.product-details h1 {
  font-size: 24px;
  margin-top: 0;
}

.product-details h2 {
  font-size: 20px;
}

.quantity {
  display: flex;
  align-items: center;
  border: 1px solid #ccc;
  width: 100px;
  height: 30px;
  margin-top: 10px;
}

.quantity-btn {
  padding: 5px 10px;
  font-size: 16px;
  border: none;
  background-color: transparent;
  cursor: pointer;
}

.quantity-input {
  width: 50px;
  padding: 5px;
  text-align: center;
  font-size: 16px;
  border: none;
  outline: none;
}

.quantity-input::-webkit-inner-spin-button,
.quantity-input::-webkit-outer-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

.buttons {
  margin-top: 20px;
}

.buy-now {
  background-color: black;
  color: white;
  padding: 10px 20px;
  border: none;
  cursor: pointer;
  margin-right: 10px;
}

.add-to-cart {
  margin-top: 10px;
  padding: 10px 20px;
  background-color: #333;
  color: #fff;
  border: none;
  cursor: pointer;
}

.description {
  margin-top: 20px;
}
.product-link {
  display: inline-block;
  text-decoration: none;
}

.product-link img {
  display: block;
  width: 500px;
  height: 300px;
  border: 2px solid #ddd;
  border-radius: 4px;
  transition: border-color 0.3s ease;
  margin-left: 20px;
  margin-bottom: 20px;
}

.product-link img:hover {
  border-color: #007bff;
}
.previous-price {
  text-decoration: line-through;
  color: #7e7979;
}

.current-price {
  color: black;
}
