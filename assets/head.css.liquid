.announcement {
  margin-bottom: 0;
  padding: 2px 0;
  text-align: center;
  background-color: #334fb4;
  color: white;
}
.announcement h1 {
  font-size: 12px;
}

.header form {
  margin-top: 20px;
  text-align: center;
  float: center;
}

.header input[type="search"] {
  padding: 6px 10px;
  border-color: black;
  border-radius: 4px;
  font-size: 14px;
}

.header button[type="submit"] {
  padding: 6px 12px;
  background-color: green;
  border: none;
  border-radius: 4px;
  color: black;
  font-size: 14px;
  cursor: pointer;
}
.navbar {
  background-color: #ededed;
  padding: 10px;
}

.navbar ul {
  list-style: none;
  margin: 0;
  padding: 0;
}
.navbar ul img {
  height: 70px;
  margin-left: 20px;
  width: 100px;
  margin-right: 20px;
}

.navbar li {
  display: inline-block;
  margin-right: 20px;
}

.navbar li:last-child {
  margin-right: 0;
}

.navbar a {
  color: black;
  text-decoration: none;
  font-size: 18px;
  padding: 6px 10px;
  border-radius: 4px;
}

.navbar a:hover {
  background-color: #b1a4b9;
  color: #334fb4;
}
