footer {
  background-color: #292828;
  padding: 20px;
  color: white;
}

.footer-container {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20px;
}

.footer-column {
  flex: 1;
}

.card-icons img {
  width: 50px;
  margin-right: 10px;
}

.social-icons a {
  width: 30px;
  margin-right: 10px;
  align-items: center;
}

.card-icons h1:hover,
.social-icons h1:hover {
  color: #d281f7;
  cursor: pointer;
}
