body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
}

.cart-page {
  max-width: 800px;
  margin: 0 auto;
  padding: 20px;
}

h1 {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
}

p {
  margin: 0;
}

.cart-items {
  margin-bottom: 20px;
}

.cart-item {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
  border-bottom: 1px solid #ccc;
  padding-bottom: 10px;
}

.item-image {
  width: 120px;
  margin-right: 20px;
}

.item-details {
  flex-grow: 1;
}

.item-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10px;
}

h2 {
  font-size: 18px;
  margin: 0;
}

.quantity {
  display: flex;
  align-items: center;
}

.quantity-btn {
  padding: 5px 10px;
  font-size: 16px;
  border: none;
  background-color: transparent;
  cursor: pointer;
}

.quantity input {
  width: 40px;
  padding: 5px;
  text-align: center;
  font-size: 16px;
  border: none;
  outline: none;
}

.quantity input::-webkit-inner-spin-button,
.quantity input::-webkit-outer-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

.item-price {
  font-weight: bold;
}

.cart-total {
  text-align: right;
}

.total {
  margin-bottom: 10px;
  font-weight: bold;
}

.cart-actions {
  display: flex;
  justify-content: flex-end;
  gap: 10px;
}

.cart-actions button {
  padding: 10px 20px;
  font-size: 16px;
  background-color: #000;
  color: #fff;
  border: none;
  cursor: pointer;
}
