.cart-container {
  background-color: #f5f5f5;
  padding: 10px;
  border-radius: 5px;
  margin-bottom: 20px;
  width: 800px;
  margin: auto 0;
  display: flex;
  flex-direction: column;
}

.cart-container h1 {
  text-align: center;
}

.cart-item {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.cart-item-image img {
  width: 150px;
  height: 150px;
  margin-right: 10px;
}

.cart-item-details {
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex-grow: 1;
}

#cart_trash {
  margin-left: 10px;
}

.cart-item-details h2 {
  font-size: 16px;
  margin-top: 10px;
  margin-bottom: 5px;
}

.cart-item-quantity {
  display: flex;
  align-items: center;
  justify-content: center;
}

.cart-item-quantity label {
  margin-right: 5px;
}

.cart-item-quantity input {
  width: 60px;
  padding: 5px;
}

.cart-item-price {
  text-align: right;
}

.cart-item-actions a {
  color: #333;
  text-decoration: underline;
  cursor: pointer;
}

.cart-summary {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20px;
}

.total-price {
  font-weight: bold;
  margin: 0;
  padding: 10px;
  border: 1px solid #262121;
  border-radius: 5px;
  background-color: #36745e;
  display: inline-block;
  color: white;
}
.cart-buttons button {
  padding: 10px 20px;
  margin-right: 10px;
  background-color: #333;
  color: #fff;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}

.cart-buttons button:hover {
  background-color: #555;
}

/* Existing CSS code */

.continue-shopping {
  padding: 10px 20px;
  background-color: #555;
  color: #fff;
  text-decoration: none;
  border-radius: 5px;
  margin-left: auto;
}

.continue-shopping:hover {
  background-color: #777;
}
